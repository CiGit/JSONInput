{
    "compilerOptions": {
        "allowJs": true,
        "strict": true,
        "jsx": "preserve",
        "checkJs": false,
        "declaration": false,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules/**",
        "src/play/**"
    ],
    "include": [
        "src/**",
        "typings/**"
    ],
    "typeAcquisition": {
        "enable": true
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}