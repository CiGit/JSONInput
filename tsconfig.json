{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "checkJs": false,
    "declaration": false,
    "pretty": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true
  },
  // "exclude": [
  //     "node_modules",
  //     "src/play"
  // ],
  "include": [
    // "src",
    "typings"
  ],
  "files": ["src/index.ts", "src/Comps/Views/index.ts"],
  "typeAcquisition": {
    "enable": true
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  }
}
