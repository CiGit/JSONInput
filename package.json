{
    "name": "jsoninput",
    "version": "0.0.12",
    "description": "Form creation from JSONSchema input",
    "main": "lib/index.js",
    "types": "typings/jsoninput.d.ts",
    "module": "lib/index.es2015.js",
    "scripts": {
        "clean": "rimraf dist lib",
        "build:rollup": "cross-env NODE_ENV=production rollup -c",
        "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.config.prod.js --mode production",
        "build:lib": "cross-env NODE_ENV=production babel src -d lib",
        "build:view": "cross-env NODE_ENV=production rollup -c rollup-view.config.js",
        "build": "yarn run clean && jest && yarn run build:rollup && yarn run build:view && yarn run cp:types",
        "cp:types": "cp typings/views.es2015.d.ts lib/",
        "start": "node dev-server.js",
        "test": "jest"
    },
    "author": "CiGit",
    "license": "MIT",
    "jest": {
        "collectCoverage": true,
        "transform": {
            "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "transformIgnorePatterns": [
            "<rootDir>/node_modules/(?!lodash-es)"
        ],
        "watchPathIgnorePatterns": [
            "<rootDir>/lib/"
        ],
        "globals": {
            "ts-jest": {
                "useBabelrc": true
            }
        }
    },
    "dependencies": {
        "immer": "^1.3.1",
        "jsonschema": "^1.2.4",
        "lodash-es": "^4.17.8"
    },
    "devDependencies": {
        "@types/jest": "^22.2.3",
        "@types/lodash-es": "^4.17.0",
        "@types/prop-types": "^15.5.3",
        "@types/react": "16.4.0",
        "@types/react-dom": "^16.0.6",
        "awesome-typescript-loader": "^5.1.1",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.4",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "cross-env": "^5.2.0",
        "eslint-plugin-babel": "^5.1.0",
        "eslint-plugin-import": "^2.12.0",
        "express": "^4.16.3",
        "jest": "^22.4.4",
        "prop-types": "^15.6.0",
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "react-testing-library": "^4.0.1",
        "rimraf": "^2.6.2",
        "rollup": "^0.60.7",
        "rollup-plugin-babel": "^3.0.4",
        "rollup-plugin-commonjs": "^9.1.0",
        "rollup-plugin-filesize": "^2.0.0",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-replace": "^2.0.0",
        "rollup-plugin-typescript2": "^0.15.0",
        "rollup-plugin-uglify": "^4.0.0",
        "ts-jest": "^22.4.6",
        "typescript": "^2.9.2",
        "uglify-es": "^3.3.9",
        "webpack": "^4.12.0",
        "webpack-dev-middleware": "^3.1.3",
        "webpack-hot-middleware": "^2.22.2"
    },
    "peerDependencies": {
        "react": "^16.3.1",
        "react-dom": "^16.3.1"
    },
    "resolutions": {
        "@types/node": "9"
    }
}
